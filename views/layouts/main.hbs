<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{page_title}}</title>
  <link rel="icon" href="{{base_url}}/favicon.ico" sizes="any">
  <meta name="HandheldFriendly" content="True">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="{{base_url}}/robireton.css">
  {{#each stylesheets}}
  <link rel="stylesheet" type="text/css" href="{{../base_url}}/{{this}}">
  {{/each}}
  {{#each scripts}}
  <script type="module" crossorigin="use-credentials" src="{{../base_url}}/{{this}}"></script>
  {{/each}}
</head>
<body>
  <header>
    <h1>Rob Ireton</h1>
    {{> menu}}
  </header>

  <main role="main" id="main-content">
    {{#if message}}<aside class="site-message">{{message}}</aside>{{/if}}
    {{#if page_title}}
      <header>
        {{#if breadcrumbs}}{{{breadcrumbs}}}{{/if}}
        <h1 class="title" id="page-title">{{page_title}}</h1>
      </header>
    {{/if}}

    {{{body}}}
  </main>

  {{#if tabs}}<nav id="tabs">{{{tabs}}}</nav>{{/if}}

  {{{right}}}

  <footer>
    Rob Ireton
  </footer>
</body>
</html>
